{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2023", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"playground/**/*.ts",
		"playground/**/*.vue",
		"core/**/*.ts",
		"core/**/*.vue"
	]
}
